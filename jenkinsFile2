pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('Docker-ID')
        FRONTEND_IMAGE = "maryam2904/project2023-frontend"
        BACKEND_IMAGE = "maryam2904/project2023-backend"
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Debug Environment') {
            steps {
                script {
                    // Comprehensive system checks
                    sh '''
                        pwd
                        whoami
                        ls -la
                        node --version
                        npm --version
                        docker --version
                        docker context ls
                        docker info
                    '''
                }
            }
        }
        
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                    sh 'mkdir -p backend'
                    dir('backend') {
                        git url: 'https://github.com/maryem012/PROJECT2023.git', branch: 'backend'
                    }
                    
                    // Verify Dockerfiles
                    sh '''
                        ls -l Dockerfile
                        ls -l backend/Dockerfile
                    '''
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                script {
                    sh '''
                        npm install --legacy-peer-deps
                        npm run build || echo "Frontend build may have issues"
                    '''
                }
            }
        }
        
        stage('Build Backend') {
            steps {
                dir('backend') {
                    script {
                        sh '''
                            npm install
                            npm run build || echo "Backend build may have issues"
                        '''
                    }
                }
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                script {
                    // Switch to desktop-linux context
                    sh 'docker context use desktop-linux'
                    
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'Docker-ID', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh """
                            echo '$DOCKER_PASSWORD' | docker login -u '$DOCKER_USERNAME' --password-stdin
                        """
                    }
                    
                    // Frontend Docker Build and Push
                    sh """
                        docker build -t ${FRONTEND_IMAGE}:${DOCKER_TAG} . || echo "Frontend Docker build failed"
                        docker tag ${FRONTEND_IMAGE}:${DOCKER_TAG} ${FRONTEND_IMAGE}:latest
                        docker push ${FRONTEND_IMAGE}:${DOCKER_TAG} || echo "Frontend image push failed"
                        docker push ${FRONTEND_IMAGE}:latest || echo "Frontend latest image push failed"
                    """
                    
                    // Backend Docker Build and Push
                    dir('backend') {
                        sh """
                            docker build -t ${BACKEND_IMAGE}:${DOCKER_TAG} . || echo "Backend Docker build failed"
                            docker tag ${BACKEND_IMAGE}:${DOCKER_TAG} ${BACKEND_IMAGE}:latest
                            docker push ${BACKEND_IMAGE}:${DOCKER_TAG} || echo "Backend image push failed"
                            docker push ${BACKEND_IMAGE}:latest || echo "Backend latest image push failed"
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            sh 'docker logout || true'
            cleanWs()
        }
        
        failure {
            echo 'Pipeline failed. Check the logs for detailed error messages.'
        }
    }
}
