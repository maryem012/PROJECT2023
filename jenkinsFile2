pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('Docker-ID')
        FRONTEND_IMAGE = "maryam2904/project2023-frontend"
        BACKEND_IMAGE = "maryam2904/project2023-backend"
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Prepare Environment') {
            steps {
                script {
                    // More comprehensive environment setup
                    sh '''
                        # Update npm and install global tools
                        npm install -g npm@latest
                        npm install -g @angular/cli
                        
                        # Verify installations
                        node --version
                        npm --version
                        ng version
                        docker --version
                        docker context ls
                    '''
                }
            }
        }
        
        stage('Checkout') {
            steps {
                script {
                    // Checkout main branch (frontend)
                    checkout scm
                    
                    // Create and checkout backend directory
                    sh 'mkdir -p backend'
                    dir('backend') {
                        git url: 'https://github.com/maryem012/PROJECT2023.git', branch: 'backend'
                    }
                    
                    // Debug: List contents of directories
                    sh '''
                        echo "Frontend directory contents:"
                        ls -la
                        echo "Backend directory contents:"
                        ls -la backend
                    '''
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                script {
                    sh '''
                        # Increase Node.js memory limit
                        export NODE_OPTIONS=--max_old_space_size=4096
                        
                        # Install dependencies
                        npm install --legacy-peer-deps
                        
                        # Build with verbose output
                        ng build --configuration=production --verbose
                    '''
                }
            }
        }
        
        stage('Build Backend') {
            steps {
                dir('backend') {
                    script {
                        sh '''
                            # Install backend dependencies
                            npm install
                            
                            # Build backend
                            npm run build
                        '''
                    }
                }
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                script {
                    // Switch to desktop-linux docker context
                    sh 'docker context use desktop-linux'
                    
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'Docker-ID', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh """
                            echo '$DOCKER_PASSWORD' | docker login -u '$DOCKER_USERNAME' --password-stdin
                        """
                    }
                    
                    // Frontend Docker Build and Push
                    sh """
                        # Build Frontend Docker image
                        docker build -t ${FRONTEND_IMAGE}:${DOCKER_TAG} \
                            --build-arg BUILD_NUMBER=${DOCKER_TAG} .
                        docker tag ${FRONTEND_IMAGE}:${DOCKER_TAG} ${FRONTEND_IMAGE}:latest
                        
                        # Push Frontend images
                        docker push ${FRONTEND_IMAGE}:${DOCKER_TAG}
                        docker push ${FRONTEND_IMAGE}:latest
                    """
                    
                    // Backend Docker Build and Push
                    dir('backend') {
                        sh """
                            # Build Backend Docker image
                            docker build -t ${BACKEND_IMAGE}:${DOCKER_TAG} \
                                --build-arg BUILD_NUMBER=${DOCKER_TAG} .
                            docker tag ${BACKEND_IMAGE}:${DOCKER_TAG} ${BACKEND_IMAGE}:latest
                            
                            # Push Backend images
                            docker push ${BACKEND_IMAGE}:${DOCKER_TAG}
                            docker push ${BACKEND_IMAGE}:latest
                        """
                    }
                }
            }
        }
    }
    
    post {
        always {
            // Cleanup steps
            sh '''
                docker logout || true
                docker system prune -f || true
            '''
            cleanWs()
        }
        
        success {
            echo 'Pipeline succeeded! Images built and pushed successfully.'
        }
        
        failure {
            echo 'Pipeline failed. Check the logs for detailed error messages.'
        }
    }
}
